<%= @post.title %>
<%= @post.content %>

<ul>
<% @post.categories.each do |cat| %>
  <li><%= cat.name %></li>
<% end %>
</ul>

<ul>
  <% @post.comments.each do |comment| %>
    <%= "#{comment.user.username} says: #{comment.content}" %>
  <% end %>
</ul>

<ul>
<% @post.users.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
<% end %>
</ul>
